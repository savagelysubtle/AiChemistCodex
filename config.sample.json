{
  "security": {
    "enableUnixTranslation": false,
    "confirmDestructiveCommands": true,
    "destructiveCommandPatterns": [
      "del",
      "rm",
      "format",
      "Remove-Item",
      "rd",
      "rmdir",
      "deltree",
      "erase",
      "fdisk",
      "clean",
      "drop",
      "truncate",
      "shutdown",
      "taskkill /F",
      "reg delete",
      "wmic.*delete",
      "net user.*\\/delete"
    ]
  },
  "shells": {
    // ... existing shell settings ...
  },
  "execution": {
    "enableDryRun": true,
    "timeoutSeconds": 300,
    "timeoutBehavior": "kill"
  }
}
