{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020", // Target modern Node.js versions
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,

    /* If NOT transpiling code: */
    // "module": "NodeNext", // Use Node's native ESM support
    // "noEmit": true, // Set to true if you only use tsc for type checking

    /* If transpiling code: */
    "module": "NodeNext", // Use NodeNext for compatibility with moduleResolution
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    /* Libraries */
    "lib": ["ES2020", "dom"], // Include modern ES features + DOM for fetch API

    /* Module Resolution */
    "moduleResolution": "NodeNext", // Keep NodeNext for resolution

    /* Project Structure */
    "rootDir": ".", // Root directory is the current directory
    "baseUrl": ".", // Base directory for module resolution
    "paths": {
      // Optional: Define path aliases if needed
      // "@/*": ["./src/*"]
    }
  },
  "include": ["./**/*.ts"], // Include all .ts files in the current directory and subdirectories
  "exclude": ["node_modules", "dist"] // Exclude node_modules and the output directory
}
